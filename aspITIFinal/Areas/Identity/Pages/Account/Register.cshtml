@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}


<div style="  width:40%;" class=" mx-auto mt-3 mb-3 text-center shadow-lg">
    <div style="margin-top:170px" class="row">

        <form  style="width:90%; margin: 40px auto " asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <h1 style="text-align:center;margin-bottom:30px;margin-top:30px">@ViewData["Title"]</h1>


            <div style="margin:15px auto ;width:85%" class="form-group row">
                <div>
                    <input placeholder="Email" asp-for="Input.Email" class="form-control" />
                </div>
            </div>
            <div style="margin:15px auto ;width:85%" class="form-outlin row">
                <div>
                    <input placeholder="Password" asp-for="Input.Password" class="form-control" />
                </div>
            </div>

            <div style="margin:15px auto ;width:85%" class="form-outlin row">
                <div>
                    <input placeholder="Confirm Password" asp-for="Input.ConfirmPassword" class="form-control" />
                </div>
            </div>

            <div style="margin:auto ;width:50%" class="form-group row">
                <button type="submit" class="btn btn-primary ">Register</button>
            </div>

        </form>
    </div>
</div>
