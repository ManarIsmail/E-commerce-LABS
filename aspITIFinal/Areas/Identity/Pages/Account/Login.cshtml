@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div style="width:40%" class=" mx-auto mt-3 mb-3 text-center shadow-lg">
    <div style="margin-top:150px" class="row">

        <form style="margin:40px auto ;width:90% " id="account" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <h1 style="text-align:center;margin-bottom:30px;margin-top:30px">@ViewData["Title"]</h1>

            <div style="margin:15px auto ;width:85%" class="form-group row">
                <div>
                    <input placeholder="Email" asp-for="Input.Email" class="form-control" />
                </div>
            </div>


            <div style="margin:15px auto ;width:85%" class="form-outlin row">
                <div>
                    <input placeholder="Password" asp-for="Input.Password" class="form-control" />
                </div>
            </div>


            <div style="margin-bottom:10px" class="form-group row">
                <div class="checkbox">
                    <label asp-for="Input.RememberMe">
                        <input asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                <p class=" small ">
                    <a class="text-muted" id="forgot-password" asp-page="./ForgotPassword">Forgot password?</a>
                </p>

            </div>



            <div style="margin:auto ;width:50%" class="form-group row">
                <a style="margin-bottom: 5px;background-color: #0d6efd; color:#fff; border-color:#0a58ca; border-radius:5px; padding-top:5px;padding-bottom: 5px" class="text-muted" href="/Products/Index"> LOGIN</a>
            </div>

            <div class="form-group">

                <p class="mb-0">
                    Don't have account?
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register</a>
                </p>
            </div>
        </form>


    </div>
</div>
