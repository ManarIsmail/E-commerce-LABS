@model aspITIFinal.Models.Category

@{
    ViewData["Title"] = "Delete";
}

<h1 style="text-align:center;margin-bottom:30px;margin-top:150px">Delete Category</h1>
<div style="width:60% ;margin-bottom:50px" class=" mx-auto mt-3 text-center shadow-lg">
    <div class="row">

        <form style="margin:40px auto ;width:90% " asp-action="Delete">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div style="margin-bottom:10px" class="form-group row">
                <label style="font-size:20px" asp-for="Category1" class="col-sm-2 col-form-label">Delete</label>
                <div class="col-sm-10">
                    <input asp-for="Category1" type="text" class="form-control">
                </div>
            </div>
            
            <div style="margin:auto ;width:30%" class="form-group row">

                <button type="submit" value="Create" style=" width: 100px; margin-top:45px; background-color:#6f42c1; border: 1px solid rgb(111,66,193);padding:10px; width: 110px" class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id"><i class="bi bi-trash"></i> Delete</button>
                <a style=" width: 150px; background-color:#6f42c1; border: 1px solid rgb(111,66,193);padding:10px; margin-top: 15px" class="btn btn-primary" asp-action="Index"><i class="bi bi-skip-backward-fill"></i> Back to List</a>
            </div>
        </form>

    </div>
</div>
