@model List<Category>

<!-- ======= Hero Section ======= -->
<section id="hero" class="d-flex align-items-center">

    <div class="container-fluid" data-aos="fade-up">
        <div class="row justify-content-center">
            <div class="col-xl-5 col-lg-6 pt-3 pt-lg-0 order-2 order-lg-1 d-flex flex-column justify-content-center">
                <h1>it's time for  a laptop refresh</h1>
                <h2>takes your creativities to the next level</h2>
                <div><a href="/home/products" class="btn-get-started scrollto">Shop Now</a></div>
            </div>
            <div class="col-xl-4 col-lg-6 order-1 order-lg-2 hero-img" data-aos="zoom-in" data-aos-delay="150">
                <img src="~/assets/img/1.png" class="img-fluid animated" alt="">
            </div>
        </div>
    </div>

</section><!-- End Hero -->
<!-- ======= Categories Section ======= -->
<section id="features" class="features">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-3 col-md-4 col-6 col-6 mt-4">
                    <div class="icon-box" style="justify-content: center;">
                        <h3><a href="/home/catproduct/@item.Id">@item.Category1</a></h3>
                    </div>
                </div>
            }
        </div>
    </div>
</section><!-- End Features Section -->
<!-- ======= Products Section ======= -->
<section class="productcontainer">
    <div class="container">

        <div class="section-title">
            <h3>Browse our <span>Items</span></h3>
        </div>
        <div class="row">
            @foreach (var item in (List<Product>)ViewBag.products)
            {

                <div class="col-lg-4 col-md-6 productcolumn">
                    <div class="productimage">
                        <div class="productcolumn_icons">
                            <a href="/home/productdetails/@item.Id" title="More details"><i class="bi bi-eye"></i></a>
                            <a href="#" title="Add to wishlist"><i class="bi bi-heart"></i></a>
                            <a href="/home/cart/@item.Id" title="Add to cart"><i class="bi bi-cart3"></i></a>
                        </div>
                        <div style="height: 60%; width: 60%;">
                            <img src="../@item.Image" class="img-fluid" alt="" style="width:100%; height:100%;">
                        </div>
                    </div>
                    <div class="productdes">
                        <h6 class=".productdes_name">@item.Brand, @item.ProcessorType, @item.ProcessorCore</h6>
                        <h6 class="productdes_price">@String.Format("{0:C}", @item.Price)</h6>
                    </div>
                </div>
            }
        </div>

    </div>
</section><!-- Products Section -->
<!-- ======= Cta Section ======= -->
<section id="cta" class="cta">
    <div class="container">

        <div class="text-center">
            <h3>Light Weight For Great Mobility</h3>
            <a class="cta-btn" href="/home/products">See More</a>
        </div>
    </div>
</section><!-- End Cta Section -->
